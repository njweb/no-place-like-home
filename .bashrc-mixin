# setup liquidprompt
[[ $- = *i* ]] && source ~/.config/liquidprompt/liquidprompt

# setup colors that will be imported by lf
LS_COLORS='di=01;36:ln=01;36:pi=33:so=01;35:do=01;35:bd=33;01:cd=33;01:or=31;01:su=01;32:sg=01;32:tw=01;34:ow=01;34:st=01;34:ex=01;32'

# configure gruvbox palette colors
source "$HOME/.vim/bundle/gruvbox/gruvbox_256palette.sh"

alias ll='ls -alF --group-directories-first'
alias la='ls -A'
alias l='ls -CF'

alias pm=podman

# make fzf use ag
export FZF_DEFAULT_COMMAND='ag -g .'

# needs xsel installed
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'
